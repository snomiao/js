{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noEmit": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
