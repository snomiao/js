{
  "name": "snobuild",
  "version": "3.2.0",
  "description": "Easy way to use esbuild.",
  "keywords": [
    "cli",
    "esbuild"
  ],
  "homepage": "https://github.com/snomiao/js/tree/master/packages/snobuild#readme",
  "bugs": {
    "url": "https://github.com/snomiao/js/issues?q=is%3Aissue+is%3Aopen+snobuild"
  },
  "repository": "https://github.com/snomiao/js/tree/master/packages/snobuild",
  "license": "GPLv3",
  "author": "Snowstar Miao <snomiao@gmail.com>",
  "type": "module",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.mjs"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.mjs",
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "boot": "pnpx snobuild@2.2.1 --lib --externals=esbuild && npm pkg set bin=lib/cli.js && npm link && snobuild --node && npm pkg set bin=dist/cli.mjs && npm link",
    "build": "snobuild --node",
    "prepack": "npm run build && npm run test",
    "test": "snobuild --node --verbose && snobuild --node --verbose"
  },
  "dependencies": {
    "globby": "^13.1.1",
    "snorun": "^1.1.17",
    "sort-package-json": "^1.57.0",
    "typescript": "^4.7.4",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/node": "^18.8.0",
    "@types/yargs": "^17.0.10",
    "esbuild": "^0.15.9"
  },
  "peerDependencies": {
    "esbuild": "^0.15.9"
  }
}
