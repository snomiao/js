{
  "name": "snobuild",
  "version": "3.2.1",
  "description": "Easy way to use esbuild.",
  "keywords": [
    "cli",
    "esbuild"
  ],
  "homepage": "https://github.com/snomiao/js/tree/master/packages/snobuild#readme",
  "bugs": {
    "url": "https://github.com/snomiao/js/issues?q=is%3Aissue+is%3Aopen+snobuild"
  },
  "repository": "https://github.com/snomiao/js/tree/master/packages/snobuild",
  "license": "GPLv3",
  "author": "Snowstar Miao <snomiao@gmail.com>",
  "type": "module",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.mjs"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "snobuild": "dist/cli.mjs",
    "deprecated-snobuild2-dist": "lib/cli.js"
  },
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "boot2": "pnpx snobuild@2.2.1 --lib --externals=esbuild,sort-package-json && npm pkg set bin.deprecated-snobuild2-dist=lib/cli.js && npm link && deprecated-snobuild2-dist --verbose && npm pkg set bin.snobuild=dist/cli.mjs && npm link",
    "boot3": "pnpx snobuild@3.2.0 && npm link",
    "build": "npm run boot2",
    "prepack": "npm run build && npm run test",
    "test": "snobuild --node --verbose && snobuild --node --verbose"
  },
  "dependencies": {
    "esbuild": "^0.15.9",
    "globby": "^13.1.1",
    "matrix-expand": "^1.0.0",
    "sort-package-json": "^2.0.0",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/yargs": "17.0.13",
    "esbuild": "^0.15.9",
    "typescript": "4.8.4"
  }
}