{
  "name": "snobuild",
  "version": "1.0.0",
  "description": "Easy way to use esbuild.",
  "keywords": [
    "cli",
    "esbuild"
  ],
  "homepage": "https://github.com/snomiao/js/tree/main/packages/snobuild#readme",
  "bugs": {
    "url": "https://github.com/snomiao/js/issues?q=is%3Aissue+is%3Aopen+snobuild"
  },
  "repository": "https://github.com/snomiao/js/tree/main/packages/snobuild",
  "license": "GPLv3",
  "author": "snomiao <snomiao@gmail.com>",
  "type": "module",
  "exports": {
    "require": "./lib/index.cjs",
    "import": "./lib/index.js"
  },
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "snobuild": "lib/cli.js"
  },
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "boot": "esbuild src/cli.ts --platform=node --outdir=lib --bundle --format=esm --external:esbuild --external:yargs --external:sort-package-json --external:snorun",
    "build": "snobuild"
  },
  "dependencies": {
    "esbuild": "^0.14.39",
    "snorun": "^1.0.0",
    "sort-package-json": "^1.57.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/yargs": "^17.0.10"
  }
}
